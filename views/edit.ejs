<html lang="en">
<%- include("./partials/head.ejs") %>

  <body class="bg-dark text-white">
    <%- include("./partials/nav.ejs") %>

      <section class="container justify-content-center">
        <div class="bg-dark">
          <h5 class="title text-white">Create Course</h5>
          <div class=" text-light">
            <form action="/courses/update/<%= course.id %>" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Course Name:</label>
                <input type="text" id="name" name="name" value="<%= course.name %>"  class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Code:</label>
                <input type="text" id="code" name="code"  value="<%= course.code %>" class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Teacher:</label>
                <input type="text" id="teacher" name="teacher" value="<%= course.teacher %>"  class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Course Description:</label>
                <input type="text" id="description" name="description"  value="<%= course.teacher %>"  class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="subjectArea" class="form-label">Subject Area:</label>
                <input type="text" id="subjectArea" name="subjectArea"  value="<%= course.subjectArea %>"  class="form-control" required>
              </div>
              <div class="mb-3">
                <label for="credits" class="form-label">Number of Credits:</label>
                <input type="number" id="credits" name="credits" value="<%= course.credits %>" class="form-control" required>
              </div>
              <button type="submit" class="btn btn-warning">Update</button>
              <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
            </form>
          </div>
        </div>
      </section>

      <%- include("./partials/footer.ejs") %>
  </body>

</html>